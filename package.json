{
  "name": "react-storefront",
  "version": "4.0.0",
  "description": "Build and deploy e-commerce progressive web apps in record time.",
  "repository": "https://github.com/moovweb/react-storefront",
  "license": "UNLICENSED",
  "private": true,
  "devEngines": {
    "node": "8.x || 9.x || 10.x"
  },
  "devDependencies": {
    "@material-ui/core": "^3.6.0",
    "@material-ui/icons": "^3.0.0",
    "gh-pages": "^1.2.0",
    "glob": "^7.1.3",
    "husky": "^1.1.2",
    "lerna": "^2.11.0",
    "mobx": "^4.1.0",
    "mobx-react": "^5.0.0",
    "mobx-state-tree": "^2.0.1",
    "prop-types": "^15.6.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-jss": "^8.3.5",
    "react-router-dom": "^4.2.2",
    "react-transition-group": "^2.5.0",
    "react-universal-component": "^2.9.0",
    "webpack": "^4.0.0"
  },
  "scripts": {
    "build": "pushd packages/react-storefront; yarn build; popd;",
    "precommit": "yarn add-license",
    "update-versions": "lerna publish --skip-npm --yes",
    "publish": "yarn update-versions; yarn build; pushd packages/react-storefront/lib; yarn publish --non-interactive; popd; pushd packages/babel-plugin-react-storefront; yarn publish --non-interactive; popd",
    "docs": "pushd packages/react-storefront; yarn docs; popd;",
    "deploy-storybook": "gh-pages -d packages/react-storefront/storybook-static",
    "test": "pushd packages/react-storefront; yarn test; popd;",
    "watch": "pushd packages/react-storefront; yarn watch; popd;",
    "add-license": "node ./tasks/addLicense",
    "link:all": "yarn build; pushd packages/react-storefront/lib; npm link; popd; pushd packages/babel-plugin-react-storefront; npm link; popd;"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  }
}
